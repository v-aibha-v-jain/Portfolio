rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write for contact forms and newsletter
    match /contacts/{document} {
      allow create: if true; // Allow anyone to create contact submissions
      allow read, update, delete: if request.auth != null; // Only authenticated users can read/modify
    }
    
    match /newsletter/{document} {
      allow create: if true; // Allow anyone to subscribe to newsletter
      allow read, update, delete: if request.auth != null; // Only authenticated users can read/modify
    }
    
    // All other documents require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}